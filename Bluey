-- ‚úÖ Load Orion Library (with error handling)
local success, OrionLib = pcall(function()
    return loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()
end)

if not success then
    warn("[‚ùå] Failed to load Orion Library! Check your executor.")
    return
end

-- ‚úÖ Create GUI Window
local Window = OrionLib:MakeWindow({
    Name = "üòà Bluey Script üòà",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "BlueyConfig"
})

-- ‚úÖ Create "Main" Tab
local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- ‚úÖ ESP (Wallhack) Function (Fixed)
local function ESP()
    for _, player in pairs(game:GetService("Players"):GetPlayers()) do
        if player.Character and not player.Character:FindFirstChild("ESP_Highlight") then
            local highlight = Instance.new("Highlight", player.Character)
            highlight.Name = "ESP_Highlight"
            highlight.FillColor = Color3.fromRGB(255, 0, 0) -- Red
            highlight.FillTransparency = 0.5
            highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
        end
    end
    print("[‚úÖ] ESP Activated!")
end

-- ‚úÖ Speed Boost Function (Fixed)
local function SpeedBoost()
    local player = game.Players.LocalPlayer
    if player and player.Character and player.Character:FindFirstChild("Humanoid") then
        player.Character.Humanoid.WalkSpeed = 50 -- Default is 16
        print("[‚úÖ] Speed Boost Activated!")
    else
        warn("[‚ùå] Failed to change speed.")
    end
end

-- ‚úÖ Infinite Jump (Fixed)
local InfiniteJumpEnabled = false
game:GetService("UserInputService").JumpRequest:Connect(function()
    if InfiniteJumpEnabled and game.Players.LocalPlayer.Character then
        game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid"):ChangeState(Enum.HumanoidStateType.Jumping)
    end
end)

-- ‚úÖ ESP Button
MainTab:AddButton({
    Name = "Enable ESP",
    Callback = function()
        ESP()
        OrionLib:MakeNotification({
            Name = "ESP Enabled",
            Content = "You can now see players through walls!",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
    end
})

-- ‚úÖ Speed Boost Button
MainTab:AddButton({
    Name = "Enable Speed Boost",
    Callback = function()
        SpeedBoost()
        OrionLib:MakeNotification({
            Name = "Speed Boost Activated",
            Content = "Your walk speed is now increased!",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
    end
})

-- ‚úÖ Infinite Jump Toggle
MainTab:AddToggle({
    Name = "Infinite Jump",
    Default = false,
    Callback = function(Value)
        InfiniteJumpEnabled = Value
        OrionLib:MakeNotification({
            Name = "Infinite Jump",
            Content = Value and "Enabled" or "Disabled",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
    end
})

-- ‚úÖ Initialize Orion GUI
OrionLib:Init()
print("[‚úÖ] GUI Loaded Successfully!")
